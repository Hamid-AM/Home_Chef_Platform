<h1><%= @chef.name %></h1>
<p><%= @chef.biography %></p>
<p>Specialties: <%= @chef.specialties %></p>
<p>Availability: <%= @chef.availability %></p>

<h2>Menus</h2>
<% @chef.menus.each do |menu| %>
  <div>
    <h3><%= menu.title %></h3>
    <p><%= menu.description %></p>
    <p>Price: <%= number_to_currency(menu.price, unit: "â‚¬") %></p>
    <% if (current_user.role == "chef") %>
      <span><%= link_to 'Edit', edit_chef_menu_path(chef_id: @chef.id, id: menu.id), class: 'btn btn-success'%> -
      <%= link_to "Delete", chef_menu_path(@chef, menu), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger' %>
      </span>
    <% end %>
  </div>
<% end %>
<% if (current_user.role == "chef") %>
  <%= link_to 'Add Menu', new_chef_menu_path(@chef), class: 'btn btn-info' %>
<% end %>

