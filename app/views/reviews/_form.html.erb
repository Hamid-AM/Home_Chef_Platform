<% if current_user&.client? && @booking.present? %>
  <%= simple_form_for [@menu, Review.new], html: { class: 'form-inline' } do |f| %>
    <div class="form-group">
      <%= f.input :rating, as: :select, collection: 1..5, prompt: 'Rate this menu', label: false, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :comment, as: :text, placeholder: 'Write your review here', label: false, input_html: { class: 'form-control', rows: 3 } %>
    </div>
    <%= f.submit 'Submit Review', class: 'btn btn-primary' %>
  <% end %>
<% end %>
