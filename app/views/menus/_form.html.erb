<%= simple_form_for [@user, @menu] do |f| %>
  <div class="mb-3">
    <%= f.input :title, label: "Menu Title", input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
  </div>
  <div class="mb-3">
    <%= f.input :description, label: "Description", input_html: { class: 'form-control' }, label_html: { class: 'form-label' }, as: :text %>
  </div>
  <div class="mb-3">
    <%= f.input :price, label: "Price ($)", input_html: { class: 'form-control' }, label_html: { class: 'form-label' }, as: :numeric %>
  </div>
  <div class="d-flex justify-content-between">
    <%= f.submit "Save Changes", class: 'btn btn-primary' %>
  </div>
<% end %>
