<!-- app/views/menus/_form.html.erb -->
<%= simple_form_for @menu do |f| %>
  <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :description, input_html: { class: 'form-control' }, as: :text %>
  </div>
  <div class="form-group">
    <%= f.input :price, input_html: { class: 'form-control' }, as: :numeric %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Back to All Menus', menus_path, class: 'btn btn-secondary mt-3' %>
