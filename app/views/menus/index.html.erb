<h1>All Menus</h1>

<div class="row">
  <% @menus.each do |menu| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= menu.title %></h5>
          <p class="card-text"><%= truncate(menu.description, length: 100) %></p>
          <p><strong>Price:</strong> <%= number_to_currency(menu.price) %></p>
          <%= link_to 'View Menu', menu_path(menu), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
