<h1>Your Bookings</h1>
<div>
  <% @bookings.each do |booking| %>
    <div>
      <p><strong>Chef:</strong> <%= booking.menu.chef.name %></p>
      <p><strong>Menu:</strong> <%= link_to booking.menu.title, menu_path(booking.menu) %></p>
      <p><strong>Date:</strong> <%= booking.date %></p>
      <p><strong>Time:</strong> <%= booking.time %></p>
      <p><strong>Status:</strong> <%= booking.status %></p>
      <%= link_to 'Edit', edit_booking_path(booking), class: "btn btn-warning" %>
      <%= link_to 'Cancel', booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
